{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es5",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "./bin",
		"lib": [
			"dom",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
	},
	"files": [
		"libs/LayaAir.d.ts",
		"libs/rx.d.ts"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"bin"
	]
}